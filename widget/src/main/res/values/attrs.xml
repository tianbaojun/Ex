<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="image" format="reference" />
    <attr name="imageScaleType" >
        <enum name="fitXY" value="0" />
        <enum name="center" value="1" />
    </attr>
    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="speed" format="integer" />
    <attr name="circleWidth" format="dimension" />

    <attr name="num" format="integer" />
    <attr name="splitSize" format="float" />
    <attr name="openSize" format="float" />

    <!--自定义的TextView-->
    <declare-styleable name="MyTextView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <!--有图片的TextView-->
    <declare-styleable name="ImageTextView">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="image"/>
        <attr name="imageScaleType"/>
    </declare-styleable>

    <!--转圈圈-->
    <declare-styleable name="CircleDialog">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="speed" />
        <attr name="circleWidth" />
    </declare-styleable>

    <!--亮度调节-->
    <declare-styleable name="ControllBar">
        <attr name="firstColor" />
        <attr name="secondColor"/>
        <attr name="image" />
        <attr name="num"/>
        <attr name="splitSize" />
        <attr name="circleWidth" />
        <attr name="openSize" />
    </declare-styleable>
</resources>
